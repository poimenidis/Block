<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      <strong><%=@post.title %></strong>
    </p>
    <a href="#" class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </a>
  </header>
  <div class="card-content">
    <div class="content">
      <%= @post.content %>
    </div>
  </div>
  <footer class="card-footer">
    <a class="card-footer-item"> <%= link_to "Edit", edit_post_path(@post), class:"button" %></a>
    <a class="card-footer-item"><%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %></a>
  </footer>
</div>

